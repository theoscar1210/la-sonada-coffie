// ============================================================
// LA SOÑADA COFFIE — Prisma Schema
// ============================================================

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ─────────────────────────────────────────────────────────────
// ENUMS
// ─────────────────────────────────────────────────────────────

enum Role {
  ADMIN
  CUSTOMER
}

enum OrderStatus {
  PENDING
  CONFIRMED
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
  REFUNDED
}

enum RoastLevel {
  LIGHT
  MEDIUM_LIGHT
  MEDIUM
  MEDIUM_DARK
  DARK
}

// ─────────────────────────────────────────────────────────────
// USER
// ─────────────────────────────────────────────────────────────

model User {
  id           String    @id @default(cuid())
  email        String    @unique
  name         String
  passwordHash String    @map("password_hash")
  role         Role      @default(CUSTOMER)
  isActive     Boolean   @default(true) @map("is_active")
  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime  @updatedAt @map("updated_at")

  addresses    Address[]
  orders       Order[]
  refreshTokens RefreshToken[]

  @@map("users")
}

model RefreshToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String   @map("user_id")
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("refresh_tokens")
}

// ─────────────────────────────────────────────────────────────
// ADDRESS
// ─────────────────────────────────────────────────────────────

model Address {
  id         String  @id @default(cuid())
  userId     String  @map("user_id")
  alias      String  @default("Casa") // "Casa", "Trabajo", etc.
  street     String
  city       String
  state      String
  country    String
  zip        String
  isDefault  Boolean @default(false) @map("is_default")

  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  orders Order[]

  @@map("addresses")
}

// ─────────────────────────────────────────────────────────────
// CATEGORY
// ─────────────────────────────────────────────────────────────

model Category {
  id          String    @id @default(cuid())
  name        String
  slug        String    @unique
  description String?
  imageUrl    String?   @map("image_url")
  isActive    Boolean   @default(true) @map("is_active")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  products Product[]

  @@map("categories")
}

// ─────────────────────────────────────────────────────────────
// PRODUCT
// ─────────────────────────────────────────────────────────────

model Product {
  id           String     @id @default(cuid())
  name         String
  slug         String     @unique
  description  String
  shortDesc    String     @map("short_desc")
  price        Decimal    @db.Decimal(10, 2)
  comparePrice Decimal?   @db.Decimal(10, 2) @map("compare_price") // precio tachado
  stock        Int        @default(0)
  images       String[]   // URLs de Cloudinary
  categoryId   String     @map("category_id")
  origin       String     // Colombia, Etiopía, etc.
  region       String?    // Huila, Nariño, etc.
  altitude     String?    // "1800-2200 msnm"
  roastLevel   RoastLevel @map("roast_level")
  process      String?    // "Lavado", "Natural", "Honey"
  flavorNotes  String[]   @map("flavor_notes") // ["chocolate", "caramelo", "frutos rojos"]
  grindOptions String[]   @map("grind_options") // ["entero", "fino", "medio", "grueso"]
  weight       Int        // gramos (e.g. 250, 500, 1000)
  featured     Boolean    @default(false)
  isActive     Boolean    @default(true) @map("is_active")
  createdAt    DateTime   @default(now()) @map("created_at")
  updatedAt    DateTime   @updatedAt @map("updated_at")

  category   Category    @relation(fields: [categoryId], references: [id])
  orderItems OrderItem[]

  @@map("products")
}

// ─────────────────────────────────────────────────────────────
// ORDER
// ─────────────────────────────────────────────────────────────

model Order {
  id              String      @id @default(cuid())
  orderNumber     String      @unique @map("order_number") // LSC-0001
  userId          String      @map("user_id")
  addressId       String?     @map("address_id")
  status          OrderStatus @default(PENDING)
  subtotal        Decimal     @db.Decimal(10, 2)
  shippingCost    Decimal     @default(0) @db.Decimal(10, 2) @map("shipping_cost")
  discount        Decimal     @default(0) @db.Decimal(10, 2)
  total           Decimal     @db.Decimal(10, 2)
  notes           String?
  // Stripe
  stripePaymentIntentId String? @map("stripe_payment_intent_id")
  paidAt          DateTime?   @map("paid_at")
  // Dirección de envío (snapshot al momento del pedido)
  shippingName    String      @map("shipping_name")
  shippingStreet  String      @map("shipping_street")
  shippingCity    String      @map("shipping_city")
  shippingState   String      @map("shipping_state")
  shippingCountry String      @map("shipping_country")
  shippingZip     String      @map("shipping_zip")
  createdAt       DateTime    @default(now()) @map("created_at")
  updatedAt       DateTime    @updatedAt @map("updated_at")

  user    User        @relation(fields: [userId], references: [id])
  address Address?    @relation(fields: [addressId], references: [id])
  items   OrderItem[]

  @@map("orders")
}

model OrderItem {
  id          String  @id @default(cuid())
  orderId     String  @map("order_id")
  productId   String  @map("product_id")
  quantity    Int
  unitPrice   Decimal @db.Decimal(10, 2) @map("unit_price") // precio al momento de compra
  grind       String? // opción de molienda elegida
  subtotal    Decimal @db.Decimal(10, 2)

  order   Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id])

  @@map("order_items")
}

// ─────────────────────────────────────────────────────────────
// BLOG POST (sincronizado con Sanity)
// ─────────────────────────────────────────────────────────────

model BlogPost {
  id          String    @id @default(cuid())
  sanityId    String    @unique @map("sanity_id")
  title       String
  slug        String    @unique
  excerpt     String?
  coverImage  String?   @map("cover_image")
  author      String
  publishedAt DateTime? @map("published_at")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  @@map("blog_posts")
}
